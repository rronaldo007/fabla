{% extends 'base.html.twig' %}

{% block title %}{{ title }}{% endblock %}

{% block body %}
<div class="container py-5">
    <h1 class="mb-4">{{ title }}</h1>

    <div class="card">
        <div class="card-body">
            {{ form_start(form) }}
                <div class="mb-3">
                    {{ form_label(form.email, 'Email', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.email) }}
                </div>

                <fieldset>
                    <legend>Profile Details</legend>
                    <div class="mb-3">
                        {{ form_label(form.userProfile.firstName, 'First Name') }}
                        {{ form_widget(form.userProfile.firstName, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.userProfile.firstName) }}
                    </div>
                    <div class="mb-3">
                        {{ form_label(form.userProfile.lastName, 'Last Name') }}
                        {{ form_widget(form.userProfile.lastName, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.userProfile.lastName) }}
                    </div>
                    <div class="mb-3">
                        {{ form_label(form.userProfile.phone, 'Phone') }}
                        {{ form_widget(form.userProfile.phone, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.userProfile.phone) }}
                    </div>
                    <div class="mb-3">
                        {{ form_label(form.userProfile.juryProfile.profession, 'Profession') }}
                        {{ form_widget(form.userProfile.juryProfile.profession, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.userProfile.juryProfile.profession) }}
                    </div>
                </fieldset>

                <button type="submit" class="btn btn-primary">Save</button>
            {{ form_end(form) }}
        </div>
    </div>
</div>
{% endblock %}
