{% extends 'base.html.twig' %}

{% block title %}{{ title }}{% endblock %}

{% block body %}
<div class="container py-5">
    <h1 class="mb-4">{{ title }}</h1>

    <div class="card">
        <div class="card-body">
            {{ form_start(form) }}
                <div class="mb-3">
                    {{ form_label(form.email, 'Email', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.email) }}
                </div>

                {# Conditionally include password field for new admins only #}
                {% if form.password is defined %}
                    <div class="mb-3">
                        {{ form_label(form.password, 'Password', {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.password, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.password) }}
                    </div>
                {% endif %}

                <fieldset>
                    <legend>Profile Details</legend>

                    <div class="mb-3">
                        {{ form_label(form.userProfile.first_name, 'First Name', {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.userProfile.first_name, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.userProfile.first_name) }}
                    </div>

                    <div class="mb-3">
                        {{ form_label(form.userProfile.last_name, 'Last Name', {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.userProfile.last_name, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.userProfile.last_name) }}
                    </div>

                    <div class="mb-3">
                        {{ form_label(form.userProfile.phone, 'Phone', {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.userProfile.phone, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.userProfile.phone) }}
                    </div>
                </fieldset>

            {{ form_end(form) }}
        </div>
    </div>
</div>
{% endblock %}
