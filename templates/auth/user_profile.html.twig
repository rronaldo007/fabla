{% extends 'base.html.twig' %}

{% block title %}Complete Profile - FABLAB{% endblock %}

{% block body %}
<div class="container py-5">
   <div class="col-md-8 mx-auto p-5 border rounded shadow-lg bg-white">
       <h1 class="h3 mb-4 fw-bold text-center text-primary">Complete Your Profile</h1>
       <p class="text-center text-muted mb-4">Help us get to know you better</p>

       {{ form_start(form) }}
       
       <div class="row">
           <div class="col-md-6 mb-4">
               <label class="form-label">{{ form_label(form.first_name) }}</label>
               {{ form_widget(form.first_name, {'attr': {'class': 'form-control', 'placeholder': 'Enter your first name'}}) }}
               {{ form_errors(form.first_name) }}
           </div>

           <div class="col-md-6 mb-4">
               <label class="form-label">{{ form_label(form.last_name) }}</label>
               {{ form_widget(form.last_name, {'attr': {'class': 'form-control', 'placeholder': 'Enter your last name'}}) }}
               {{ form_errors(form.last_name) }}
           </div>
       </div>

       <div class="mb-4">
           <label class="form-label">{{ form_label(form.phone) }}</label>
           {{ form_widget(form.phone, {'attr': {'class': 'form-control', 'placeholder': 'Enter your phone number'}}) }}
           {{ form_errors(form.phone) }}
       </div>

       <div class="mb-4">
           <label class="form-label">{{ form_label(form.address) }}</label>
           {{ form_widget(form.address, {'attr': {'class': 'form-control', 'placeholder': 'Enter your address'}}) }}
           {{ form_errors(form.address) }}
       </div>

       <div class="mb-4">
           <label class="form-label">{{ form_label(form.date_of_birth) }}</label>
           {{ form_widget(form.date_of_birth, {'attr': {'class': 'form-control'}}) }}
           {{ form_errors(form.date_of_birth) }}
       </div>

       <button type="submit" class="btn btn-primary w-100 py-2">Complete Profile</button>
       {{ form_end(form) }}
   </div>
</div>
{% endblock %}