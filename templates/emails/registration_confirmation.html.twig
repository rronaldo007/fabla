{# templates/emails/email_validation_success.html.twig #}
<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ 'email.validation.success.subject'|trans }}</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            line-height: 1.6;
            color: #333;
            max-width: 600px;
            margin: 0 auto;
            padding: 20px;
        }
        .header {
            background-color: #4CAF50;
            color: white;
            padding: 15px;
            text-align: center;
            border-radius: 5px 5px 0 0;
        }
        .content {
            padding: 20px;
            border: 1px solid #ddd;
            border-top: none;
            border-radius: 0 0 5px 5px;
        }
        .button {
            display: inline-block;
            background-color: #4CAF50;
            color: white;
            padding: 12px 24px;
            text-decoration: none;
            border-radius: 4px;
            margin: 20px 0;
            font-weight: bold;
        }
        .footer {
            margin-top: 20px;
            font-size: 12px;
            color: #777;
            text-align: center;
        }
    </style>
</head>
<body>
    <div class="header">
        <h1>{{ 'email.validation.success.title'|trans }}</h1>
    </div>
    <div class="content">
        <p>{{ 'email.validation.success.greeting'|trans }},</p>
        
        <p>{{ 'email.validation.success.confirmed'|trans }}</p>
        
        <p>{{ 'email.validation.success.account_ready'|trans }}</p>
        
        <p style="text-align: center;">
            <a href="{{ url('app_login') }}" class="button">{{ 'email.validation.success.login_button'|trans }}</a>
        </p>
        
        <p>{{ 'email.validation.success.questions'|trans }}</p>
    </div>
    <div class="footer">
        <p>{{ 'email.footer.no_reply'|trans }}</p>
        <p>Â© {{ "now"|date("Y") }} FabLab Platform. {{ 'email.footer.all_rights'|trans }}</p>
    </div>
</body>
</html>