{% extends 'base.html.twig' %}

{% block title %}Reserve {{ resource }}{% endblock %}

{% block body %}
<div class="container py-5">
    <h1 class="h3 mb-4">Reserve {{ resource }}</h1>
    
    <div class="card">
        <div class="card-body">
            {{ form_start(form) }}
            {{ form_errors(form) }}
            
            <div class="row">
                <div class="col-md-6">
                    {{ form_row(form.startTime, {
                        'attr': {
                            'class': 'form-control',
                            'min': "now"|date('Y-m-d\\TH:i')
                        }
                    }) }}
                </div>
                <div class="col-md-6">
                    {{ form_row(form.timeSlot, {
                        'attr': {
                            'class': 'form-control'
                        }
                    }) }}
                </div>
            </div>
            
            <div class="mt-3">
                {{ form_row(form.submit) }}
            </div>
            
            {{ form_end(form) }}
        </div>
    </div>
    
    <div class="card mt-4">
        <div class="card-header">
            Available Hours
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <h5>Morning</h5>
                    <p>08:00 - 12:00</p>
                </div>
                <div class="col-md-6">
                    <h5>Afternoon</h5>
                    <p>13:00 - 17:00</p>
                </div>
            </div>
            <div class="alert alert-info mt-3 mb-0">
                <i class="fas fa-info-circle"></i> Please note that reservations must be made within the laboratory's operating hours.
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
{% endblock %}