{% extends 'base.html.twig' %}

{% block title %}{{ title }}{% endblock %}

{% block body %}
<div class="container py-5">
    <h1 class="mb-4">{{ title }}</h1>

    <div class="card">
        <div class="card-body">
            {{ form_start(form, {'attr': {'enctype': 'multipart/form-data'}}) }}
                {{ form_widget(form) }}
                <button type="submit" class="btn btn-primary">{{ title == 'Edit Jury Member' ? 'Save Changes' : 'Create Jury Member' }}</button>
            {{ form_end(form) }}
        </div>
    </div>
</div>
{% endblock %}
